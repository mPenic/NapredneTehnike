<Window x:Class="BankovniSustavApp.Views.FinnhubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finnhub Data" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Command="{Binding FetchStockQuoteCommand}" Content="Fetch Stock Quote" />
            <StackPanel Margin="10" Background="LightGray">
                <TextBlock Text="Stock Quote:" FontWeight="Bold" Margin="5"/>
                <TextBlock Text="{Binding StockQuoteFormatted}" Margin="5"/>
            </StackPanel>

            <Button Command="{Binding FetchCompanyProfileCommand}" Content="Fetch Company Profile" />
            <StackPanel Margin="10" Background="LightGray">
                <TextBlock Text="Company Profile:" FontWeight="Bold" Margin="5"/>
                <TextBlock Text="{Binding CompanyProfileFormatted}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
